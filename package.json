{
  "name": "task-api",
  "version": "1.0.0",
  "type": "module",
  "description": "Task API (Express + Prisma + PostgreSQL) with OpenAPI docs and GET /tasks/:id",
  "scripts": {
    "dev": "node src/server.js",
    "start": "node src/server.js",
    "postinstall": "npx prisma generate"
    "bundle": "npx @redocly/cli bundle docs/openapi.yaml -o public/bundled.yaml",
    "prisma:generate": "npx prisma generate",
    "migrate:dev": "npx prisma migrate dev --name init",
    "migrate:deploy": "npx prisma migrate deploy",
    "seed": "node prisma/seed.js",
    "build:render": "npm run bundle && npm run prisma:generate && npm run migrate:deploy && npm run seed"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "swagger-ui-express": "^5.0.1",
    "yaml": "^2.4.2"
  },
  "devDependencies": {
    "@redocly/cli": "^1.16.1",
    "prisma": "^5.18.0"
  }
}
